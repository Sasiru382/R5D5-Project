import { BrowserRouter, Route, Routes } from "react-router-dom";
import { useState } from "react";
import "./App.css";
import Pagefooter from "./components/footer/Pagefooter";
import Home from "./pages/home/home";
import Navbar from "./components/navigation/Navbar";
import Ourteam from "./pages/ourTeam/ourTeam";
import Clubs from "./pages/clubs/clubs";
import Clubplayers from "./pages/players/clubplayers";
import OnePlayer from "./pages/onePlayer/onePlayer";
import Predict from "./pages/button/predict";

function App() {
  const [club, setClub] = useState("");
  const [player, setPlayer] = useState("");
  const [predict, setPredict] = useState("");

  return (
    <div className="App">
      <BrowserRouter>
        <Navbar />
        <Routes>
          <Route path="/about" element={<Ourteam />} />
          <Route>
            <Route
              index
              path="/clubpage"
              element={<Clubs setClub={setClub} />}
            />
            <Route>
              <Route>
                <Route
                  index
                  path="/clubpage/clubplayers"
                  element={<Clubplayers club={club} setPlayer={setPlayer} />}
                />
                <Route>
                  <Route
                    index
                    path="/clubpage/clubplayers/oneplayer"
                    element={
                      <OnePlayer player={player} setPredict={setPredict} />
                    }
                  />
                </Route>
                <Route
                  index
                  path="/clubpage/clubplayers/oneplayer/predict"
                  element={<Predict predictedPlayer={predict} />}
                ></Route>
              </Route>
            </Route>
          </Route>

          <Route path="/" element={<Home />} />
        </Routes>
        <Pagefooter />
      </BrowserRouter>
    </div>
  );
}

export default App;
